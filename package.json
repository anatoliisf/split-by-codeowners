{
	"name": "split-by-codeowners",
	"version": "1.0.0",
	"description": "Split local changes into CODEOWNERS buckets and (optionally) create one PR per bucket (CLI + GitHub Action).",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/anatoliisf/split-by-codeowners.git"
	},
	"homepage": "https://github.com/anatoliisf/split-by-codeowners#readme",
	"bugs": {
		"url": "https://github.com/anatoliisf/split-by-codeowners/issues"
	},
	"keywords": [
		"github-actions",
		"codeowners",
		"codemod",
		"pull-request",
		"cli"
	],
	"author": "anatoliisf",
	"license": "MIT",
	"main": "dist/index.js",
	"bin": {
		"split-by-codeowners": "dist-cli/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=20"
	},
	"files": [
		"dist",
		"dist-cli",
		"action.yml",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "npm run build:action && npm run build:cli",
		"build:action": "ncc build src/index.ts -o dist --source-map",
		"build:cli": "ncc build src/cli.ts -o dist-cli --source-map",
		"typecheck": "tsc -p tsconfig.json --noEmit"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"minimatch": "^9.0.5",
		"octokit": "^4.1.0"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"@vercel/ncc": "^0.38.1",
		"typescript": "^5.6.3"
	}
}
